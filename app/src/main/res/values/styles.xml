<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionBarSize">100dp</item>
        <item name="android:itemBackground">@color/bloodRed</item>
        <item name="android:itemTextAppearance">@style/CustomTextMenu</item>


    </style>

    <style name="progressBarBloodRed" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/bloodRed</item>
    </style>

    <style name="CustomTextMenu" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="textShadow">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="SettingsFragmentStyle" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:background">@color/bloodRed</item>
        <item name="textColorAlertDialogListItem">#fff</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>