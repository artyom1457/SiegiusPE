<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loding_screen"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SelectionRoom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <TextView
            style="@style/textShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lithos_pro_regular"
            android:text="select map"
            android:textColor="#fff"
            android:textSize="40sp"
            android:id="@+id/select_map_tv"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/IV_selected_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:background="@drawable/custom_hud_button"
            android:visibility="invisible"
            android:padding="5dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="end"
            android:layout_margin="30dp"
            android:id="@+id/selection_room_back_button"
            android:background="@drawable/custom_back_button"/>
    </FrameLayout>

    <TextView
        style="@style/textShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_weight="0.5"
        android:fontFamily="@font/lithos_pro_regular"
        android:id="@+id/select_map_name_tv"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/level_selection_button"
        style="@style/textShadow"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/custom_button"
        android:text="Play"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:visibility="invisible"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />

    <Gallery
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/level_selection"
        android:layout_weight="3">
    </Gallery>
</LinearLayout>